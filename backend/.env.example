# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Keystone Compatibility: APP_SLUG for path-based routing
# Leave empty for root path deployment (local dev)
# Set to your app slug for Keystone deployment (e.g., "consult")
APP_SLUG=

# Database (Production - PostgreSQL)
DB_NAME=consult_db
DB_USER=consult_user
DB_PASSWORD=your-db-password-here
DB_HOST=localhost
DB_PORT=5432

# Google Workspace OAuth
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxx

# Google Workspace SMTP
EMAIL_HOST_USER=consult@pmc.edu.pk
EMAIL_HOST_PASSWORD=your-app-password-here

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS and CSRF (Frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8000

# Reverse Proxy Settings (for Keystone deployment)
USE_X_FORWARDED_HOST=True

# Site Configuration
SITE_ID=1
DOMAIN=pmc.edu.pk
