{
  // Java Language Server Configuration
  // Default to the system JDK installed on Cursor/Linux workspaces.
  // Update this path if your local JDK lives somewhere else (see JAVA_SETUP.md).
  "java.jdt.ls.java.home": "/usr/lib/jvm/java-21-openjdk-amd64",

  // Gradle and tooling need to use the same JDK as the language server.
  "java.import.gradle.java.home": "/usr/lib/jvm/java-21-openjdk-amd64",

  // Java Configuration
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-21",
      "path": "/usr/lib/jvm/java-21-openjdk-amd64",
      "default": true
    }
  ],
  "java.compile.nullAnalysis.mode": "automatic",

  // Java Extension Settings
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.import.gradle.enabled": true,
  "java.import.gradle.wrapper.enabled": true
}


